<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Player 1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Player 2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/game"
        android:layout_width="371dp"
        android:layout_height="376dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/board"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.261">

        <TableRow
            android:id="@+id/index0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/token1"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:layout_marginRight="10dp"
                android:onClick="pick"
                android:tag="0"/>

            <ImageView
                android:id="@+id/token2"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="1"/>

            <ImageView
                android:id="@+id/token3"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:layout_marginLeft="5dp"
                android:onClick="pick"
                android:tag="2"/>
        </TableRow>

        <TableRow
            android:id="@+id/index1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/token4"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="3"/>

            <ImageView
                android:id="@+id/token5"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="4"/>

            <ImageView
                android:id="@+id/token6"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="5"/>
        </TableRow>

        <TableRow
            android:id="@+id/index2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="6">

            <ImageView
                android:id="@+id/token7"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="6"/>

            <ImageView
                android:id="@+id/token8"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="7"/>

            <ImageView
                android:id="@+id/token9"
                android:layout_width="122dp"
                android:layout_height="124dp"
                android:onClick="pick"
                android:tag="8"/>
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>